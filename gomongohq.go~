package main

import(
	"fmt",
	"html/template",
	"labix.org/v2/mgo",
	"labix.org/v2/mgo/bson",
	"net/http",
	"os"
)

type Details struct{
	id string
	owner string
	secret string
	server string
	farm int
	title string
	ispublic int
	isfriend int
	isfamily int
	upvote int
	downvote int
}

func main(){
	http.HandleFunc("/",root)
	http.HandleFunc("/upvote{id}",upvote)
	http.HandleFunc("/downvote{id}",downvote)
	fmt.Println("Listening for incoming request")
	err := http.ListenAndServer(GetPort(),nil)
	if err!=nil {
		panic(err)	
	}
}

func root(w http.ResponseWriter,r *http.Request)
{
	//should send a get method to flickr api.....
	
	//get json data from the db and send that.....	
	fmt.Fprint(w, )
}
